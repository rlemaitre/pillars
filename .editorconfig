# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{scala,sbt,sc}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.adoc]
indent_style = space
indent_size = 2
max_line_length = 120
